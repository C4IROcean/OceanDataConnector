name: Docker Image CI

on:
  push:
    branches: [master]
  pull_request:
    branches: [master]

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Generate Docker metadata
        id: meta
        uses: docker/metadata-action@v3
        with:
          images: |
            oceandata.azurecr.io/odc-example-notebooks-testrunner
          flavor: |
            latest=true
      - name: Setup Docker Buildx
        uses: docker/setup-buildx-action@v1
      - uses: azure/docker-login@v1
        with:
          login-server: oceandata.azurecr.io
          username: {% raw %}${{ secrets.ACR_USERNAME }}{% endraw %}
          password: {% raw %}${{ secrets.ACR_PASSWORD }}{% endraw %}
      - uses: actions/checkout@v3
      - name: Build and push the docker image
        uses: docker/build-push-action@v2
        env:
          DOCKER_BUILDKIT: 1
        with:
          push: true
          tags: {% raw %}${{ steps.meta.outputs.tags }}{% endraw %}
          labels: {% raw %}${{ steps.meta.outputs.labels }}{% endraw %}

{% for slug, session in sessions.items() %}
  run_tests_{{slug}}:
    runs-on: ubuntu-latest
    needs: build

    steps:
      - name: Run tests for {{slug}}
        run:
          {% raw %}docker run -e "DATABASE_URL=${{ secrets.ODC_DATABASE_URL }}" -e
          "ODE_CONNECTION_STR=${{ secrets.ODE_CONNECTION_STR }}" -e
          "ODE_MAPBOX_API_TOKEN=${{ secrets.ODE_MAPBOX_API_TOKEN }}" local nox -s {% endraw %} "{{session}}"
{% endfor %}
